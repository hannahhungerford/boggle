 public void actionPerformed (ActionEvent event)   //if a button is clicked
  {
   String wordSearch; //the word the user wants to search the dictionary for
  System.out.println ("a");
   
   if (event.getSource () == instructions) // if the user clicks instructions button
    {
      JOptionPane.showMessageDialog (null, instructionsTxt, "Instructions", JOptionPane.INFORMATION_MESSAGE);
      
    }
   
   if (event.getSource () == search)
   {
     Vector <String> dictionary = new Vector<String>();
     
     try
     {
     Scanner scanner = new Scanner(new File("larger_dict.txt"));
     
     
     while (scanner.hasNextLine())
     {
       dictionary.addElement(new String (scanner.nextLine()));
     }
     
     scanner.close ();
     System.out.println (dictionary.size());
     }
     catch (IOException e)
     {
     }
     
     String searchWord = JOptionPane.showInputDialog ("Enter the word you would like to search to dictionary for:  ");
     
     System.out.println (dictionary);
     
    
    int binaryResult = (binarySearch (dictionary, searchWord));
    
    if ( binaryResult == -1)
      JOptionPane.showMessageDialog (null,"That word was not found.", "Not Found", JOptionPane.INFORMATION_MESSAGE);
    
    else 
      JOptionPane.showMessageDialog (null, "That word was found!", "Found", JOptionPane.INFORMATION_MESSAGE);
   }
   
   if (event.getSource () == newGame) //if the user wants to search the dictionary 
   {
     for (int c = 0; c < 4; c++)
    {
    for (int d = 0; d < 4; d++)
    {
      letterButtons [c][d].setText(rollDice (diceNumber));
      diceNumber++;
    }
    } 
     
     
   }
     
 }
 
 
 
   public static int binarySearch (Vector <String> array, String target)
  {
    int high = array.size();
    int low = 0;
    int middle;
    
    while (high - low > 1)
    {
      
      middle = (high + low) / 2;
      
        
      if (array.get(middle).compareTo (target) < 0)
        high = middle;
      
      else 
        low = middle;
      
    
    }
    
    if (low == -1 || array.get(low) != target)
      return -1;
    
    else 
      return low;
  }
 
 
 
 
 
 
 
 
 
 
